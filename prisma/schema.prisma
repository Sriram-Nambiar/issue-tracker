model Issue {
  id          Int         @id @default(autoincrement())
  title       String      @db.VarChar(255)
  description String      @db.Text
  status      IssueStatus @default(open)
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
}

enum IssueStatus {
  open
  in_progress
  closed
}
